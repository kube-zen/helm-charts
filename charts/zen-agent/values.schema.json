{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "saas": {
      "type": "object",
      "properties": {
        "apiBase": {
          "type": "string",
          "pattern": "^https?://[^/]+$",
          "description": "Public SaaS API base URL (must be https://, no .svc.cluster.local, no IPs)"
        },
        "wsBase": {
          "type": "string",
          "pattern": "^wss?://[^/]+$",
          "description": "Public SaaS WS base URL (must be wss://, no .svc.cluster.local, no IPs)"
        }
      },
      "required": [
        "apiBase",
        "wsBase"
      ]
    }
  }
}
